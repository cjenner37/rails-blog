<!-- New Post Modal -->
<div class="modal fade" id="new-post-modal">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Write Post</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= form_with model: @post, local: true do |f| %>
					  <div class="form-group">
					    <%= f.label :title %>
					    <%= f.text_field :title %>
					  </div>
					  <div class="form-group">
					    <%= f.label :content %>
					    <%= f.text_field :content %>
					  </div>
					  <%= f.submit %>
			<% end %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-primary">Save changes</button>
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>

<div class="page-title">
	<h2 class="display-2" ><%= @user.full_name %></h2>
</div>

<div class="post-heading-container">
	<h4 class="display-4" >Recent Posts</h4>
	<% if @user == @current_user %>
		<button type="submit" id="new-post-button" class="btn btn-primary">New Post</button>
	<% end %>
</div>

<div class="row">
	<div class="col-9">
		<ul>
			<% @user.posts.each do |post| %>
				<li>
					<h5 class="display-5" ><%= link_to post.title, post %></h5>
					<p><%= post.content %></p>
				</li>
			<% end %>	
		</ul>
	</div>
	<div class="col-3">
		<p>Posts: <%= @user.posts.count %></p>
		<p>Comments: <%= @user.comments.count %></p>
	</div>
</div>