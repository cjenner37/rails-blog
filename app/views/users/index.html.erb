<h1 class="display-1">Welcome to the blog!</h1>

<% @users.each do |user| %>
	<div class="card">
	  <div class="card-block">
	    <h4 class="card-title"><%= link_to "#{user.full_name}", user %></h4>
	    <p class="card-text"><%= user.posts.count %> posts</p>
	    <p class="card-text"><%= user.comments.count %> comments</p>
	  </div>
	</div>	
<% end %>